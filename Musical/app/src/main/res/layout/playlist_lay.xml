<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@color/transperent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/playcircleimage"
        android:layout_width="50dp"
        app:civ_border_color="@color/blurtrans"
        app:civ_border_width="1.5dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/playing"/>
    <TextView
        android:id="@+id/playlisttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/playcircleimage"
        android:layout_above="@+id/songcenter"
        android:textColor="@color/white"
        android:text="Someone Like You"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/playcircleimage"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/deletemenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/menu"/>

</RelativeLayout>