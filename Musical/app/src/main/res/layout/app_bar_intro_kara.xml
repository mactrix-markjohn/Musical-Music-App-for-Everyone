<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#99000000"
    android:layout_height="match_parent"
    tools:context="com.mactrix.www.musical.IntroKara">

    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/singconcert"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/microphone"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#99ffffff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.38"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="30dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:textColor="#77ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.43"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/singing"
        android:textSize="70dp"
        android:textStyle="bold"
        android:textColor="@color/blurtrans"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Singing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
        <TextView
        android:id="@+id/studio"
            android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="#77ffffff"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Studio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.63"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.97"
            android:textColor="@color/blurtrans"
            android:textSize="17dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="A Studio to Sing your Heart Out"/>

    </android.support.constraint.ConstraintLayout>





